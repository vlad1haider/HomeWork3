<Window x:Class="HumanResourcesManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Human Resources Management" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FFDDDDDD">
            <Button Content="Home Page" Click="HomePageButton_Click" />
            <Button Content="Employee List" Click="EmployeeListButton_Click" />
        </StackPanel>

        <Frame Name="MainFrame" Grid.Column="1"/>
    </Grid>
</Window>