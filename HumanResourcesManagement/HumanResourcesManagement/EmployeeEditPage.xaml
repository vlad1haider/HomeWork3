<Page x:Class="HumanResourcesManagement.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EmployeeEditPage">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock FontSize="24" Text="Edit Employee" Margin="0,0,0,20" />

            <TextBlock Text="Name:"/>
            <TextBox Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Position:"/>
            <TextBox Name="PositionTextBox" Margin="0,0,0,20"/>

            <Button Content="Save Changes" Click="SaveChangesButton_Click" />
        </StackPanel>
    </Grid>
</Page>